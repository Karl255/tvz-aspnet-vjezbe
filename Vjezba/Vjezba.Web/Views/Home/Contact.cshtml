@{
    ViewData["Title"] = "Contact page";
}
<h1>@ViewData["Title"]</h1>

<p>Podaci koji su proslijeđeni iz controller-a: @ViewData["Message"]</p>

<form asp-area="" asp-controller="Home" asp-action="SubmitQuery" method="post">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" />

    <label for="surname">Surname</label>
	<input type="text" id="surname" name="surname" />

	<label for="email">Email</label>
	<input type="email" id="email" name="email" />

    <label for="message">Message</label>
    <textarea id="message" name="message"></textarea>
    
    <label for="messageType">Message type</label>
    <select id="messageType" name="messageType">
        <option value="pohvala">Pohvala</option>
        <option value="upit">Upit</option>
        <option value="poslovni prijedlog">Poslovni prijedlog</option>
        <option value="žalba">Žalba</option>
    </select>

    <div class="group">
	    <input type="checkbox" id="receiverNewsletter" name="receiveNewsletter" checked /> <!-- naravno checked :) -->
        <label for="receiveNewsletter">Receive newsletter</label>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
</form>

<style>
    form {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;

        max-width: 32rem;
        margin-block: 2rem;
        margin-inline: auto;
    }

    form > * + :is(label, .group, [type="submit"]) {
        margin-top: 0.5rem;
    }
</style>
